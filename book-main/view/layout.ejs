    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* CSS for Navbar */
header {
    background-color: #7e3758e3;
    padding: 10px 0;
}


nav ul {
    list-style: none;
    margin: 0;
    display: flex;
    flex-direction: row;
    padding: 0;
}

nav ul li {
    text-align: center;
    margin-right: 20px; /* Spacing between navbar items */
}

nav ul li:last-child {
    margin-right: 0; /* Remove margin for the last navbar item */
}

nav a {
    text-decoration: none;
    color: lightskyblue;
    font-weight: bold;
    transition: color 0.3s; /* Smooth color transition on hover */
}

nav a:hover {
    color: #ff9900; /* Change color on hover */
}

.cart-link {
    text-decoration: none;
    color: lightskyblue;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.cart-link i {
    margin-right: 5px; /* Spacing between the cart icon and "Cart" text */
}

    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/profile">Home</a></li>
                <li><a href="/profile/get-books">Get Books</a></li>
                <li><a href="/get-update-profile">Update Profile</a></li>
        <!-- Cart link at the end -->
        <li style="display: flex;position: absolute;margin-top:0.1%;margin-left: 90%;">
        <a href="/my-cart" class="cart-link">
            <i class="fas fa-shopping-cart"></i>
            Cart
        </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/">Logout</a>
        </li>
        </ul>
    </nav>
    </header>
</body>
</html>
